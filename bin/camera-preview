#!/bin/bash

echo "#bash - Camera preview start"

#### FILE
FILE_DIR=$1
FILE=$FILE_DIR/preview.h264

echo "#bash - Previewing file $FILE"

#### TECHNICAL SETTINGS
#10 mbps
BITRATE=10000000
DURATION=9000
FRAMERATE=130

#### SIZE AND POSITION
RECORDING_WIDTH=1280
RECORDING_HEIGHT=720
DISPLAY_WIDTH=800
DISPLAY_HEIGHT=480
VIDEO_WIDTH=660
VIDEO_HEIGHT=366
# ALIGN CENTER
#VIDEO_OFFSET_X=$((($DISPLAY_WIDTH - $VIDEO_WIDTH) / 2))
#VIDEO_OFFSET_Y=$((($DISPLAY_HEIGHT - $VIDEO_HEIGHT) / 2))
# ALIGN LEFT BOTTOM
VIDEO_OFFSET_X=0
VIDEO_OFFSET_Y=$(($DISPLAY_HEIGHT - $VIDEO_HEIGHT))
# PREVIEW
PREVIEW=$VIDEO_OFFSET_X,$VIDEO_OFFSET_Y,$VIDEO_WIDTH,$VIDEO_HEIGHT

#### VISUAL SETTINGS
SHARPNESS=100
# 0 is normal
CONTRAST=0
# 50 is normal
BRIGHTNESS=50
# 0 is normal
SATURATION=-100
ISO=0
# off, auto, night, nightpreview, backlight, spotlight, sports, snow, beach, verylong, fixedfps, antishake, fireworks
EXPOSURE=auto
# off, auto, sun, cloud, shade, tungsten, fluorescent, incandescent, flash, horizon
AWB=shade
# average, spot, backlit, matrix
METERING=matrix
# off, low, med, high
DRC=off

#### RUN CAMERA
raspivid -o $FILE -b $BITRATE -t $DURATION -fps $FRAMERATE -e -w $RECORDING_WIDTH -h $RECORDING_HEIGHT -p $PREVIEW -sh $SHARPNESS -co $CONTRAST -br $BRIGHTNESS -sa $SATURATION -ISO $ISO -ex $EXPOSURE -awb $AWB -mm $METERING -drc $DRC

echo "#bash - Camera preview end"
